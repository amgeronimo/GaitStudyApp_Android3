<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scanner_fragment_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_select_device"
        android:id="@+id/ble_scan_title"
        android:layout_gravity="center_horizontal" />

    <fragment xmlns:tools="http://schemas.android.com/tools"
        android:name="com.mbientlab.metawear.app.BleScannerFragmentAuto"
        android:id="@+id/scanner_fragment"
        tools:layout="@layout/blescan_device_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/nav_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:text="@string/label_nav_report" />


</LinearLayout>